@model ML.Disco
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registrar Discos</h2>
<h5>Llena los campos para registrar el disco</h5>
<hr /> 
<div class="container">
    @using (Html.BeginForm("Form", "Disco", FormMethod.Post, new { enctype = "multipart/form-data" })) { 
        <div class="row">
            @Html.HiddenFor(model => model.IdDisco)

            @*@Html.LabelFor(model => Model.IdDisco)
                @Html.TextBoxFor(model => Model.IdDisco, new { @class = "form-control visually-hidden" })*@
            <div class="col-md-3">
                @Html.LabelFor(model => Model.Titulo)
                @Html.TextBoxFor(model => Model.Titulo, new { @class = "form-control" })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(model => Model.Artista.IdArtista)
                @Html.DropDownListFor(model => Model.Artista.IdArtista, new SelectList(Model.Discos, "IdArtista", "NombreArtista"), "Selecciona un artista", new { @class = "form-control" })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(model => Model.Genero.IdGenero)
                @Html.DropDownListFor(model => Model.Genero.IdGenero, new SelectList(Model.Discos2, "IdGenero", "NombreGenero"), "Selecciona un genero", new { @class = "form-control" })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(model => Model.Duracion)
                @Html.TextBoxFor(model => Model.Duracion, new { @class = "form-control" })
            </div>

        </div>
    <div class="row">
        <div class="col-md-3">
            @Html.LabelFor(model => Model.Anio)
            @Html.TextBoxFor(model => Model.Anio, new { @class = "form-control" })
        </div>
        <div class="col-md-3">
            @Html.LabelFor(model => Model.Distribuidora)
            @Html.TextBoxFor(model => Model.Distribuidora, new { @class = "form-control" })
        </div>
        <div class="col-md-3">
            @Html.LabelFor(model => Model.Ventas)
            @Html.TextBoxFor(model => Model.Ventas, new { @class = "form-control" })
        </div>
        <div class="col-md-3">
            @Html.LabelFor(model => Model.Disponibilidad)
            @Html.TextBoxFor(model => Model.Disponibilidad, new { @class = "form-control" })
        </div>
    </div>
    <hr />
    <div class="row">
        <input class="btn btn-success" type="submit" name="name" value="Guardar" />
        @Html.ActionLink("Cancelar", "GetAll", "Disco", htmlAttributes: new { @class = "btn btn-danger" })

    </div>
    }
</div>